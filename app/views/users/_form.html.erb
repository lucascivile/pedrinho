      </ul>
    </div>
  <% end %>

  <h1><%= title %></h1>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: 'input' %>
  </div>

  <div class="actions">
    <%= form.submit 'Sign Up', class: 'form-btn' %>
  </div>
<% end %>
