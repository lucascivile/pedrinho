<% user = User.find_by_id(@membership.user_id) %>
<% group = Group.find_by_id(@membership.group_id) %>

<h1>User <%=user.email%> in group <%=group.name%></h1>

<%= form_with(model: @membership, local: true) do |form| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :is_admin %>
